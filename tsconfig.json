{
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
